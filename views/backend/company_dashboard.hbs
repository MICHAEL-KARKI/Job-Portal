    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light gray background */
        }

        nav.sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: #343a40; /* Dark background for sidebar */
            color: #fff; /* White text */
            transition: width 0.3s ease;
        }


        .menu-bar {
            padding: 20px;
        }

        .menu-links {
            list-style: none;
            padding: 0;
        }

        .nav-link {
            margin-bottom: 10px;
        }

        .nav-link a {
            color: #fff; /* White text for links */
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .nav-link a:hover {
            background-color: #495057; /* Darker background on hover */
        }

        .bottom-content {
            position: absolute;
            bottom: 20px;
            left: 20px;
        }

        .toggle-switch {
            display: flex;
            align-items: center;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
            background-color: #ced4da; /* Gray switch */
            border-radius: 20px;
            margin-left: 10px;
            cursor: pointer;
        }

        .switch:before {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background-color: #fff; /* White circle */
            top: 2px;
            left: 2px;
            transition: transform 0.3s ease;
        }

        .switch.active:before {
            transform: translateX(20px); /* Move the circle to the right */
        }

        .home {
            margin-left: 250px; /* Ensure content doesn't get hidden behind sidebar */
            padding: 20px;
        }

        .text {
            font-size: 24px;
            color: #fbfdff; /* Dark gray text */
        }
                .text1 {
            font-size: 24px;
            color: #000000;
            padding: 200px; /* Dark gray text */
        }
    </style>
</head>
