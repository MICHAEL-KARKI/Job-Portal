<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" href="{{favicon}}" type="image/png" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/static/css/style.css" />
    <style>
      .userImage{
        margin-right: 50px;
        height: 40px;
        width: 40px;
        border-radius: 50%;
      }
      .userImage a{
        text-decoration: none;
      }
      .userImage img {
        height: 100%;
        width: 100%;
        border-radius: 50%;

      }
    </style>
  </head>
  <body>
    <header>
      <div class="logo">
        <img src="/static/image/BWE logo.png" alt="BWES Logo" />
      </div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/jobs">Find Job</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>

      {{#if auth}}
   
        <strong class="userImage">
          <a href="/userDashboard"><img src="/static/image/{{user.image}}"></a>
        </strong>

      {{else}}
        <div class="user-actions">
          <div class="dropdown" id="registerDropdown">
            <a class="dropbtn">Register</a>
            <div class="dropdown-content">
              <a href="/register">Register as Job Seeker</a>
              <a href="/companySignup">Register as Company</a>
            </div>
          </div>
          <div class="dropdown" id="loginDropdown">
            <a class="dropbtn">Login</a>
            <div class="dropdown-content">
              <a href="/login">Login as Job Seeker</a>
              <a href="/companySignup">Login as Company</a>
            </div>
          </div>
        </div>

      {{/if}}

    </header>

    <main>
      {{{body}}}
    </main>

    <footer>
      <div class="footer-info">
        <span> 
           <span>&copy;2024 Better World Employment Services. All rights reserved.</span>
          <br/>
           <span><i class="fas fa-map-marker-alt"></i> Manglapur, Butwal</span>
          <br />
           <span> <i class="far fa-envelope"></i> betterjobs@gmail.com</span>
          <br/>
        </span>
      </div>
    </footer>

    <script src="static/js/script.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

  </body>
</html>